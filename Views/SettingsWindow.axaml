<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
		x:Class="KeyboardOverlay.Views.SettingsWindow"
        x:DataType="vm:SettingsWindowViewModel"
        mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
        Title="SettingsWindow">

	<StackPanel Margin="20">
		<TextBlock Text="Configurações de Cores" FontSize="20" FontWeight="Bold" Margin="0,0,0,20"/>

		<TextBlock Text="Cor da Fonte:"/>
		<ColorPicker x:Name="FontColorPicker" Margin="0,5,0,15" SelectedColorChanged="OnFontColorChanged"/>

		<TextBlock Text="Cor da Borda:"/>
		<ColorPicker x:Name="BorderColorPicker" Margin="0,5,0,15" SelectedColorChanged="OnBorderColorChanged"/>

		<TextBlock Text="Cor de Fundo:"/>
		<ColorPicker x:Name="BackgroundColorPicker" Margin="0,5,0,15" SelectedColorChanged="OnBackgroundColorChanged"/>

		<Button Content="Salvar Configurações" Click="SaveButton_Click"/>
	</StackPanel>
	
</Window>
